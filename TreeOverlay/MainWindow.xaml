<Window x:Class="TreeOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tree Overlay" Height="520" Width="520"
        WindowStartupLocation="CenterScreen">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock Text="Tree Overlay Control Panel" FontSize="18" FontWeight="SemiBold" />

    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,12,0,12">
      <StackPanel Orientation="Vertical" Spacing="12">
        <GroupBox Header="Display">
          <StackPanel Orientation="Vertical" Margin="12" Spacing="10">
            <StackPanel Orientation="Horizontal" Spacing="12">
              <TextBlock Text="Monitor" Width="140" VerticalAlignment="Center" />
              <ComboBox x:Name="MonitorComboBox" Width="280" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="12">
              <TextBlock Text="Corner" Width="140" VerticalAlignment="Center" />
              <ComboBox x:Name="CornerComboBox" Width="280" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="12">
              <TextBlock Text="Scale" Width="140" VerticalAlignment="Center" />
              <Slider x:Name="ScaleSlider" Minimum="0.25" Maximum="2" Value="1" Width="240" TickFrequency="0.25" IsSnapToTickEnabled="False" />
              <TextBlock x:Name="ScaleValueText" Width="40" VerticalAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="12">
              <TextBlock Text="Opacity" Width="140" VerticalAlignment="Center" />
              <Slider x:Name="OpacitySlider" Minimum="0.2" Maximum="1" Value="1" Width="240" TickFrequency="0.1" IsSnapToTickEnabled="False" />
              <TextBlock x:Name="OpacityValueText" Width="40" VerticalAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="12">
              <CheckBox x:Name="AlwaysOnTopCheckBox" Content="Always-on-top" />
              <CheckBox x:Name="ClickThroughCheckBox" Content="Click-through" />
            </StackPanel>
          </StackPanel>
        </GroupBox>

        <GroupBox Header="GIF">
          <StackPanel Orientation="Vertical" Margin="12" Spacing="10">
            <StackPanel Orientation="Horizontal" Spacing="12">
              <TextBlock Text="Current GIF" Width="140" VerticalAlignment="Center" />
              <TextBox x:Name="GifPathTextBox" Width="240" IsReadOnly="True" />
              <Button x:Name="BrowseGifButton" Content="Browse" Width="80" />
            </StackPanel>
            <StackPanel Orientation="Vertical" Spacing="6">
              <TextBlock Text="Recent GIFs" />
              <ListBox x:Name="RecentGifsListBox" Height="120" />
            </StackPanel>
          </StackPanel>
        </GroupBox>

        <GroupBox Header="Actions">
          <StackPanel Orientation="Horizontal" Margin="12" Spacing="12">
            <Button x:Name="StartStopButton" Content="Start Overlay" Width="160" />
            <Button x:Name="ResetButton" Content="Reset Defaults" Width="160" />
          </StackPanel>
        </GroupBox>

        <GroupBox Header="About">
          <StackPanel Orientation="Vertical" Margin="12" Spacing="6">
            <TextBlock Text="Tree Overlay keeps your festive GIF floating on the desktop." TextWrapping="Wrap" />
            <TextBlock Text="Made with ♥ by Veli Yılmaz" FontSize="12" Foreground="#666666" />
          </StackPanel>
        </GroupBox>
      </StackPanel>
    </ScrollViewer>

    <TextBlock Grid.Row="2" Text="Made with ♥ by Veli Yılmaz" FontSize="11" Foreground="#888888" HorizontalAlignment="Center" />
  </Grid>
</Window>
